{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hyprpaper-mac",
  "version": "0.1.0",
  "identifier": "com.hyprpaper-mac.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Wallpaper Selector",
        "width": 896,
        "height": 672,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
